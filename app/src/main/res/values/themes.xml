<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <style name="Base.Theme.MyApp" parent="Base.Theme.App">
        <item name="colorPrimary">@color/blueGrayDark</item>
        <item name="colorPrimaryVariant">@color/blueGrayDarkVariant</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/greenVariant</item>
        <item name="android:colorBackground">@color/blueGrayDark</item>
        <item name="colorSurface">@color/blueGrayDark</item>
        <item name="colorError">@color/redDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
    </style>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="textAppearanceHeadline4">
            @style/TextAppearance.MaterialComponents.Headline4.Custom
        </item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline4.Custom" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">30sp</item>
    </style>

    <!--<style name="TextAppearance.MaterialComponents.Headline5.Custom" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline6.Custom" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>-->

    <style name="DaysTextViewStyle">
        <item name="android:textColor">@color/days_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/track_selector</item>
    </style>

    <style name="AlarmMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/base_grid_size</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/doub_grid_size</item>
        <item name="cornerSizeTopLeft">@dimen/doub_grid_size</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/theme_selector</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="CustomExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:gravity">center</item>
        <item name="iconSize">30dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="CheckableCustomExtendedFab" parent="CustomExtendedFab">
        <item name="android:checkable">true</item>
        <item name="backgroundTint">@color/theme_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/blueGrayDarker</item>
        <item name="android:textColorSecondary">@color/blueGrayDark</item>
    </style>
</resources>